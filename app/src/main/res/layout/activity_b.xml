<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BDBDBD"
    android:orientation="vertical"
    tools:context="com.example.rootyasmeen.FCI_Learn.Instructor">

    <TextView
        android:id="@+id/type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Subject Name\nAnd Type Of Question"
        android:textSize="12pt"
        android:textStyle="bold"
        android:background="@drawable/textview"
        android:padding="20dp"
        android:layout_marginBottom="20dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.TextView.SpinnerItem"
        android:entries="@array/subject"
        android:id="@+id/spin_subject">

    </Spinner>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/truefalse"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="59dp"
                android:text="True/False"
                android:textSize="7pt"
                android:background="@drawable/button1"
                android:padding="10dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/mcq"
                android:layout_width="wrap_content"
                android:layout_height="59dp"
                android:text="mcq"
                android:layout_marginBottom="20dp"
                android:textSize="10pt"
                android:background="@drawable/button1"
                android:padding="10dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/assay"
                android:layout_width="wrap_content"
                android:layout_height="59dp"
                android:text="Assay"
                android:layout_marginBottom="20dp"
                android:textSize="10pt"
                android:textStyle="bold"
                android:background="@drawable/button1"
                android:padding="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/starttime"
                    android:layout_width="wrap_content"
                    android:layout_height="59dp"
                    android:text="Start Time"
                    android:textSize="10pt"
                    android:textStyle="bold"
                    android:background="@drawable/button1"
                    android:padding="10dp" />

                <Button
                    android:id="@+id/endtime"
                    android:layout_width="wrap_content"
                    android:layout_height="59dp"
                    android:text="Finish Time"
                    android:textSize="10pt"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:background="@drawable/button1"
                    android:padding="10dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>


